<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPasswordActivity"
    android:background="@color/colorPrimary">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/forgotToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>
    <RelativeLayout
        android:layout_below="@id/forgotToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtforgotpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your registered mobile number and email below :"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id="@+id/forgotMobile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Mobile Number(10 digits)"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:maxLength="10"
        android:textSize="18sp"
        android:layout_below="@id/txtforgotpwd"
        />
    <EditText
        android:id="@+id/forgotEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:hint="Email Address"
        android:paddingLeft="20dp"
        android:layout_below="@id/forgotMobile" />
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Next"
        android:textSize="18sp"
        android:background="@color/buttonColor"
        android:layout_below="@id/forgotEmail"/>

    </RelativeLayout>

</RelativeLayout>